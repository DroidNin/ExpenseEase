<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <!-- Define Financial Objectives -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) Financial Objectives"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reduce costs, increase savings, and improve budgeting accuracy."
        android:textSize="16sp"/>

    <!-- Leverage Technology -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Use Technology"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leverage expense management software or apps to automate processes, track expenses in real-time, and generate reports efficiently."
        android:textSize="16sp"/>

    <!-- Establish Budget -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3) Establish Budget"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a detailed budget outlining expected income and expenses. Regularly review and adjust based on actual spending."
        android:textSize="16sp"/>

    <!-- Track All Expenses -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4) Track All Expenses"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encourage consistent and accurate expense tracking. Ensure timely logging of expenses with receipts and documentation."
        android:textSize="16sp"/>

    <!-- Categorize Expenses -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="5) Categorize Expenses"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organize expenses into categories to identify spending patterns and potential savings areas."
        android:textSize="16sp"/>

    <!-- Implement Approval Processes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="6) Implement Approval Processes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Define clear approval workflows, specify spending limits, and ensure expenses are authorized appropriately."
        android:textSize="16sp"/>

    <!-- Enforce Policies -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7) Enforce Policies"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establish expense policies outlining permissible expenses, reimbursement procedures, and responsible spending guidelines."
        android:textSize="16sp"/>

    <!-- Monitor and Analyze -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8) Monitor and Analyze"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regularly review expense reports, analyze spending trends, and identify areas for improvement or corrective actions."
        android:textSize="16sp"/>

    <!-- Negotiate with Vendors -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9) Negotiate with Vendors"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Negotiate contracts and pricing with vendors to secure favorable terms and reduce costs."
        android:textSize="16sp"/>

    <!-- Encourage Responsibility -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10) Encourage Responsibility"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Educate individuals on the importance of cost-consciousness and accountability in managing expenses."
        android:textSize="16sp"/>

    <!-- Automate Reconciliation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11) Automate Reconciliation"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Integrate expense management systems with accounting software for seamless reconciliation of expenses and financial records."
        android:textSize="16sp"/>

    <!-- Regular Audits -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12) Regular Audits"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conduct periodic audits to ensure compliance with expense policies and identify areas for improvement."
        android:textSize="16sp"/>

    <!-- Seek Feedback -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13) Seek Feedback"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicit feedback from stakeholders on the expense management process to refine and optimize the system."
        android:textSize="16sp"/>

    <!-- Stay Compliant -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14) Stay Compliant"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay updated with tax laws and regulations regarding expense reporting and reimbursement."
        android:textSize="16sp"/>

    <!-- Continuous Improvement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15) Continuous Improvement"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuously refine and optimize the expense management system based on performance metrics and evolving business needs."
        android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
